# Alertar SYN Flood
alert tcp any any -> any any (msg:"SYN Flood Attack"; flags: S; threshold: type both, track by_dst, count 100, seconds 5; classtype:misc-activity; sid:1;)

# Dropar parcialmente os pacotes de acordo com a reputação do IP de origem
drop ip $HOME_NET any -> any any (msg:"Drop parcial"; flow:to_server; lua: script.lua; noalert; sid:6;)

# Dropar todos os pacotes de IP com baixa reputação
drop ip any any -> any any (msg:"Dropar todos os pacotes de IP com baixa reputação"; flow:to_server; iprep:src,BadHosts,>,107; sid:3;)
